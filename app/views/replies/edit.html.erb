<h1>My Tweet and a list of replies</h1>

<div class = "container">
    <div class = "row">
<!--        <div class = "col-sm-offset-4 col-sm-4"> -->
        <div class = "col-sm-4">
            
            <div class="row">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <%= image_tag @twee.user.avatar, :size => "50x50"%>
                        Tweet by <%= @twee.user.username %>
                    </div>
                    <div class="panel-body">
                        <%= @twee.post %>
                    </div>
                    <div class="panel-footer">
                        <%= Like %>
                    </div>
                </div>
            </div>

        <% @twee.replies.each do |reply| %>
            <div class="row">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <%= image_tag reply.user.avatar, :size => "50x50"%>
                        Replied by <%= reply.user.username %>
                    </div>
                    <div class="panel-body">
                            <%= reply.post %>
                            <%= distance_of_time_in_words(Time.now, reply.updated_at.localtime) %>
                        <div> LIKE </div>
                    </div>
                    <div class="panel-footer">
                        <%= link_to "Back", tweet_path(id: @twee.id), class:"btn btn-warning"%>      
                    </div>
                </div>
            </div>
        <% end %>


        </div>

        <div class = "col-sm-offset-1 col-sm-4">
            <div class="row">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class = "panel-title">EDIT REPLY FORM</h3>
                    </div>
                        <%= form_for @repli, url: tweet_reply_path(tweet_id: @twee.id, id: @repli.id), method: :put do |f| %>
                        <div class="panel-body">

                            <%= f.hidden_field :tweet_id %>

                            <div class ="form-group row">
                                <%= f.label :reply, class:"col-sm-2 control-label" %>
                                <div class="col-sm-10">
                                        <%= f.text_area :post, class:"form-control"%>
                                </div>
                            </div>

                        </div>

                        <div class="panel-footer">                      
                            <div class="form-group row">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <%= f.submit 'Update', class:"btn btn-info"%>
                                    <% end %>
                                    <%= link_to "Back", tweet_path(id: @twee.id), class:"btn btn-warning"%>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>


    </div>
</div>

			

