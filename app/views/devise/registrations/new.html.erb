<div class="container">
  <div class="row">
    <div class = "col-sm-offset-2 col-sm-8">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:multipart => true}, class:"form-horizontal") do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group row">
            <%= f.label :username, class:"col-sm-3 control-label"%>
          <div class="col-sm-4">
            <%= f.text_field :username, autofocus: true, class:"form-control"%>
          </div>
        </div>

        <div class="field form-group row">
          <%= f.label :dob, class:"col-sm-3 control-label" %>
          <div class="col-sm-4">  
            <%= f.date_field :dob, autofocus: true, class:"form-control"%>
          </div>
        </div>

        <div class="field form-group row">
          <%= f.label :gender, class:"col-sm-3 control-label" %>
          <div class="col-sm-4"> 
            <%= f.text_field :gender, autofocus: true, class:"form-control" %>
          </div>
        </div>

      <!-- Later add the image profile -->

        <div class="field form-group row">
          <%= f.label :email, class:"col-sm-3 control-label" %>
          <div class="col-sm-4">
            <%= f.email_field :email, autofocus: true, class:"form-control" %>
          </div>
        </div>

        <div class="field form-group row">
            <%= f.label :password, class:"col-sm-3 control-label"%>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          <div class="col-sm-4">
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
          </div>
        </div>

        <div class="field form-group row">
          <%= f.label :password_confirmation, class:"col-sm-3 control-label"%>
          <div class="col-sm-4">
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control"%>
          </div>
        </div>
        
        <div class="field form-group row">
          <%= f.label :image, class:"col-sm-offset-3 control-label" do %>
          <div class="col-sm-4">
            <%= f.file_field :avatar %>
            <%= f.hidden_field :avatar_cache %>
          </div>
          <% end %>
        </div>

        <div class="actions form-group row">
          <div class="col-sm-offset-3 col-sm-4">
            <%= f.submit "Sign up", class:"btn btn-success"%>
            <div class="login_button">
              <%= render "devise/shared/links"%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
